{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "esModuleInterop": true,       
    "skipLibCheck": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",       
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
